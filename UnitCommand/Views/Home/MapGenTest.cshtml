@{
    ViewBag.Title = "MapGenTest";
}

@section scripts {
    <script src="/Scripts/jsExtender/jsExtender.js"></script>
    <script src="/Scripts/game/tileTypes.js"></script>
    <script src="/Scripts/game/levels/mapGenerator.js"></script>
}

<style>
    body, html {
        background-color: #494949;
    }
     #mapArea {
         position: relative;
         width: 800px;
         height: 800px;
         margin-left: 100px; 
     }

    .map-area {
        position: absolute;
        width: 44px;
        height: 44px;
        font-weight: bold;
        background-color: gray;
        vertical-align: middle;
        text-align: center;
        line-height: 44px;
        font-size: 12px;
    }

    .area-tile {
        position: absolute;
        width: 4px;
        height: 4px;
        font-weight: bold;
        background-color: gray;
        vertical-align: middle;
        text-align: center;
    }
</style>
<h2>MapGenTest</h2>
<div id="mapArea"></div>
<script>
    var mapGenClass = mapGenerator({
        constructor: function () {
            var proto = mapGenClass.prototype;
            console.log('Map Generator Initialized.');

            proto.appendFunctions({
                test2: function () {
                    console.log('test2 from mapGenClass.');
                    this.base();
                }
            });
        }
    });

    var map = mapGenClass.create(10);
    map.generateMap();
    map.showMap();
    map.test();
    map.test2();
</script>
